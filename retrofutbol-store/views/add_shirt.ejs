<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Añadir Nueva Camiseta</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/style.css" />
</head>

<body>
  <%- include('nav') %>

  <div class="container mt-4">
    <h1 class="mb-4">Añadir Nueva Camiseta</h1>

    <form action="/admin/add" method="POST">
      <div class="mb-3">
        <label for="id" class="form-label">ID (debe ser único)</label>
        <input type="number" class="form-control" id="id" name="id" required>
      </div>
      <div class="mb-3">
        <label for="team" class="form-label">Equipo</label>
        <input type="text" class="form-control" id="team" name="team" required>
      </div>
      <div class="mb-3">
        <label for="year" class="form-label">Año</label>
        <input type="number" class="form-control" id="year" name="year" required>
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Precio</label>
        <input type="number" step="0.01" class="form-control" id="price" name="price" required>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">URL de la imagen</label>
        <input type="text" class="form-control" id="image" name="image" required>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Descripción</label>
        <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
      </div>
      <div class="mb-3">
        <label for="video" class="form-label">URL del video de YouTube</label>
        <input type="text" class="form-control" id="video" name="video" required>
      </div>
      <div class="mb-3">
        <label for="map" class="form-label">URL del mapa de Google Maps</label>
        <input type="text" class="form-control" id="map" name="map" required>
      </div>

      <hr>
      <h5>Tallas y Stock</h5>
      <div id="sizes-container">
        <div class="row g-3 mb-2 size-row" data-index="0">
          <div class="col-sm-5">
            <input type="text" class="form-control" name="sizes[0][size]" placeholder="Talla (ej. S, M, L)" required>
          </div>
          <div class="col-sm-5">
            <input type="number" class="form-control" name="sizes[0][stock]" placeholder="Stock" required>
          </div>
          <div class="col-sm-2">
            <button type="button" class="btn btn-danger w-100 remove-size-btn">Quitar</button>
          </div>
        </div>
      </div>
      <button type="button" class="btn btn-secondary mb-3" id="add-size-btn">Añadir otra talla</button>

      <button type="submit" class="btn btn-success btn-lg">Guardar camiseta</button>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.getElementById('add-size-btn').addEventListener('click', function() {
      const container = document.getElementById('sizes-container');
      const lastRow = container.querySelector('.size-row:last-of-type');
      const newIndex = parseInt(lastRow.dataset.index) + 1;

      const newSizeRow = lastRow.cloneNode(true);
      newSizeRow.dataset.index = newIndex;
      newSizeRow.querySelector('input[name^="sizes"][name$="[size]"]').name = `sizes[${newIndex}][size]`;
      newSizeRow.querySelector('input[name^="sizes"][name$="[stock]"]').name = `sizes[${newIndex}][stock]`;
      newSizeRow.querySelector('input[name^="sizes"][name$="[size]"]').value = '';
      newSizeRow.querySelector('input[name^="sizes"][name$="[stock]"]').value = '';

      container.appendChild(newSizeRow);
    });

    document.getElementById('sizes-container').addEventListener('click', function(e) {
      if (e.target.classList.contains('remove-size-btn')) {
        if (document.querySelectorAll('.size-row').length > 1) {
          e.target.closest('.size-row').remove();
        } else {
          alert('Debe haber al menos una talla.');
        }
      }
    });
  </script>
</body>
</html>
