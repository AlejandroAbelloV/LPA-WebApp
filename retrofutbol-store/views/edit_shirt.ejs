<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Editar Camiseta</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/style.css" />
</head>


<body>
  <%- include('nav') %>

  <div class="container mt-4">
    <h1 class="mb-4">Editar Camiseta</h1>

    <form action="/admin/edit/<%= shirt.id %>" method="POST">
      <div class="mb-3">
        <label for="id" class="form-label">ID (no editable)</label>
        <input type="number" class="form-control" id="id" name="id" value="<%= shirt.id %>" readonly>
      </div>
      <div class="mb-3">
        <label for="team" class="form-label">Equipo</label>
        <input type="text" class="form-control" id="team" name="team" value="<%= shirt.team %>" required>
      </div>
      <div class="mb-3">
        <label for="year" class="form-label">Año</label>
        <input type="number" class="form-control" id="year" name="year" value="<%= shirt.year %>" required>
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Precio</label>
        <input type="number" step="0.01" class="form-control" id="price" name="price" value="<%= shirt.price %>" required>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">URL de la imagen</label>
        <input type="text" class="form-control" id="image" name="image" value="<%= shirt.image %>" required>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Descripción</label>
        <textarea class="form-control" id="description" name="description" rows="3" required><%= shirt.description %></textarea>
      </div>
      <div class="mb-3">
        <label for="video" class="form-label">URL del video de YouTube</label>
        <input type="text" class="form-control" id="video" name="video" value="<%= shirt.video %>" required>
      </div>
      <div class="mb-3">
        <label for="map" class="form-label">URL del mapa de Google Maps</label>
        <input type="text" class="form-control" id="map" name="map" value="<%= shirt.map %>" required>
      </div>

      <hr>
      <h5>Tallas y Stock</h5>
      <div id="sizes-container">
        <% if (shirt.sizes && Array.isArray(shirt.sizes)) { %>
          <% shirt.sizes.forEach(function(size, index) { %>
            <div class="row g-3 mb-2 size-row" data-index="<%= index %>">
              <div class="col-sm-5">
                <input type="text" class="form-control" name="sizes[<%= index %>][size]" placeholder="Talla (ej. S, M, L)" value="<%= size.size %>" required>
              </div>
              <div class="col-sm-5">
                <input type="number" class="form-control" name="sizes[<%= index %>][stock]" placeholder="Stock" value="<%= size.stock %>" required>
              </div>
              <div class="col-sm-2">
                <button type="button" class="btn btn-danger w-100 remove-size-btn">Quitar</button>
              </div>
            </div>
          <% }); %>
        <% } %>
      </div>
      <button type="button" class="btn btn-secondary mb-3" id="add-size-btn">Añadir otra talla</button>

      <button type="submit" class="btn btn-success btn-lg">Actualizar camiseta</button>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const container = document.getElementById('sizes-container');
      let nextIndex = container.querySelectorAll('.size-row').length;

      document.getElementById('add-size-btn').addEventListener('click', function() {
        const newSizeRow = document.createElement('div');
        newSizeRow.classList.add('row', 'g-3', 'mb-2', 'size-row');
        newSizeRow.dataset.index = nextIndex;
        newSizeRow.innerHTML = `
          <div class="col-sm-5">
            <input type="text" class="form-control" name="sizes[${nextIndex}][size]" placeholder="Talla (ej. S, M, L)" required>
          </div>
          <div class="col-sm-5">
            <input type="number" class="form-control" name="sizes[${nextIndex}][stock]" placeholder="Stock" required>
          </div>
          <div class="col-sm-2">
            <button type="button" class="btn btn-danger w-100 remove-size-btn">Quitar</button>
          </div>
        `;
        container.appendChild(newSizeRow);
        nextIndex++;
      });

      container.addEventListener('click', function(e) {
        if (e.target.classList.contains('remove-size-btn')) {
          if (container.querySelectorAll('.size-row').length > 1) {
            e.target.closest('.size-row').remove();
          } else {
            alert('Debe haber al menos una talla.');
          }
        }
      });
    });
  </script>
</body>
</html>
